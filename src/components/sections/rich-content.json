{
  "collectionName": "components_sections_rich_contents",
  "info": {
    "displayName": "Rich Content Section",
    "description": "Free-form rich text content section",
    "icon": "feather"
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "content": {
      "type": "richtext",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "alignment": {
      "type": "enumeration",
      "enum": ["left", "center", "right"],
      "default": "left"
    },
    "maxWidth": {
      "type": "enumeration",
      "enum": ["narrow", "medium", "wide", "full"],
      "default": "medium"
    }
  }
}

