{
  "collectionName": "components_shared_buttons",
  "info": {
    "displayName": "Button",
    "description": "A CTA button with text, URL and styling",
    "icon": "cursor"
  },
  "attributes": {
    "text": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "url": {
      "type": "string",
      "required": true
    },
    "variant": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "yellow", "white", "outline"],
      "default": "primary"
    },
    "isExternal": {
      "type": "boolean",
      "default": false
    }
  }
}

