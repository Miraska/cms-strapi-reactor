{
  "collectionName": "components_global_social_links",
  "info": {
    "displayName": "Social Link",
    "description": "Social media link with platform name, URL and optional custom icon",
    "icon": "link"
  },
  "attributes": {
    "platform": {
      "type": "enumeration",
      "enum": [
        "linkedin",
        "twitter",
        "facebook",
        "instagram",
        "youtube",
        "telegram",
        "email",
        "website",
        "custom"
      ],
      "required": true
    },
    "url": {
      "type": "string",
      "required": true
    },
    "label": {
      "type": "string",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "customIcon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "isActive": {
      "type": "boolean",
      "default": true
    }
  }
}
