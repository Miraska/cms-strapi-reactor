# =============================================================================
# STRAPI CMS - Environment Variables
# =============================================================================
# Copy to .env and update values for your environment
# =============================================================================

# -----------------------------------------------------------------------------
# SERVER
# -----------------------------------------------------------------------------
HOST=0.0.0.0
PORT=1337

# Public URL of Strapi (used for webhooks, emails, etc.)
# Development: http://localhost:1337
# Production: http://your-server-ip:1337 or https://cms.yourdomain.com
PUBLIC_URL=http://localhost:1337

# Enable proxy mode (set true if behind nginx/apache)
PROXY=true

# -----------------------------------------------------------------------------
# SECURITY KEYS (REQUIRED - generate unique values!)
# -----------------------------------------------------------------------------
# Generate: openssl rand -base64 32
APP_KEYS=key1,key2,key3,key4
ADMIN_JWT_SECRET=your-admin-jwt-secret
API_TOKEN_SALT=your-api-token-salt
TRANSFER_TOKEN_SALT=your-transfer-token-salt
ENCRYPTION_KEY=your-encryption-key
JWT_SECRET=your-jwt-secret

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
# Supported: sqlite, postgres, mysql
DATABASE_CLIENT=postgres

# PostgreSQL settings
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=strapi_cms
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-db-password
DATABASE_SSL=false

# SQLite settings (alternative)
# DATABASE_CLIENT=sqlite
# DATABASE_FILENAME=.tmp/data.db

# -----------------------------------------------------------------------------
# CORS - Frontend Origins
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins
# Development: http://localhost:5173,http://localhost:4173
# Production: http://your-frontend-domain.com,https://your-frontend-domain.com
CORS_ORIGIN=http://localhost:5173,http://localhost:4173,http://127.0.0.1:5173

# Client URL for preview feature
CLIENT_URL=http://localhost:5173

# Preview secret key
PREVIEW_SECRET=preview-secret-key

# -----------------------------------------------------------------------------
# EMAIL / SMTP (for contact form)
# -----------------------------------------------------------------------------
# These can also be configured in Strapi Admin > Global Settings
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=REACTOR Website

# Contact form recipients (comma-separated)
CONTACT_FORM_RECIPIENTS=admin@example.com
CONTACT_FORM_SUBJECT=New contact form submission

# -----------------------------------------------------------------------------
# TELEMETRY
# -----------------------------------------------------------------------------
STRAPI_TELEMETRY_DISABLED=false